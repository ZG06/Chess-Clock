MDBoxLayout:
   orientation: 'horizontal'
   md_bg_color: '#444444' 

   # First timer
   MDAnchorLayout:
      size_hint: .4, 1

      MDRaisedButton:
         id: timer1
         md_bg_color: '#c96b1e'
         anchor_x: 'center'
         anchor_y: 'center'
         text_color: 'white'
         elevation: 4
         size_hint: .92, .9
         font_size: 55
         font_name: 'fonts/OpenSans-SemiBold.ttf'
         text: '5:00'
         md_bg_color_disabled: '#db7f12'
         disabled_color: 'black'
         on_press:
            app.timer1_pressed()
      
   # Buttons
   MDBoxLayout:
      size_hint: .2, 1
      orientation: 'vertical'

      # Restart button
      MDAnchorLayout:
         MDIconButton:
            id: reset
            anchor_x: 'center'
            anchor_y: 'top'
            icon: 'replay'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            on_release:
               app.reset()

      # Pause button
      MDAnchorLayout:
         MDIconButton:
            id: pause
            anchor_x: 'center'
            anchor_y: 'center'
            icon: 'pause'
            icon_size: '50dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            on_release:
               app.pause() if self.icon == 'pause' else app.resume()

      # Settings button
      MDAnchorLayout:
         MDIconButton:
            id: settings
            anchor_x: 'center'
            anchor_y: 'bottom'
            icon: 'wrench'
            icon_size: '42dp'
            theme_icon_color: 'Custom'
            icon_color: 'black'
            on_release:
               app.settings()

   # Second timer
   MDAnchorLayout:
      size_hint: .4, 1

      MDRaisedButton:
         id: timer2
         md_bg_color: '#c96b1e'
         anchor_x: 'center'
         anchor_y: 'center'
         text_color: 'white'
         elevation: 4
         font_size: 55
         size_hint: .92, .9
         font_name: 'fonts/OpenSans-SemiBold.ttf'
         text: '5:00'
         md_bg_color_disabled: '#db7f12'
         disabled_color: 'black'
         on_press:
            app.timer2_pressed()
